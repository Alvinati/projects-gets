<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/form_card"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:elevation="4dp"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".main.MainActivity">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Ubah Token"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            style="@style/TextAppearance.AppCompat.Medium"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/row_group"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:text="User"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:text=" : "
                    android:textColor="@android:color/black"
                    />
                <Spinner
                    android:id="@+id/ct_sp_usergroup"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    />
            </TableRow>

            <TableRow
                android:id="@+id/row_token"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:text="Token"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:text=" : "
                    android:textColor="@android:color/black"
                    />
                <EditText
                    android:id="@+id/ct_et_token"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:inputType="text"
                    />
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:text="Terakhir diganti"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:text=" : "
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:id="@+id/ct_txt_username"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    />
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:text="Tgl Update"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:text=" : "
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:id="@+id/ct_txt_tgl"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    />
            </TableRow>

        </TableLayout>

</LinearLayout>
