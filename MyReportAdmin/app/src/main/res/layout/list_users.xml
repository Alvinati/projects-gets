<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:background="@drawable/main_button"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/ic_hat"
        android:src="@drawable/ic_hat"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@+id/ic_hat"
        android:id="@+id/list_users_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimaryDark"
        android:text="Test User"
        />

    <TextView
        android:id="@+id/list_users_email"
        android:layout_below="@id/list_users_nama"
        android:layout_alignStart="@id/list_users_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test@gmail.com"
        />

    <TextView
        android:id="@+id/list_users_company"
        android:layout_below="@id/list_users_email"
        android:layout_alignStart="@id/list_users_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PT Prima Jaya"
        />

    <TextView
        android:id="@+id/created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Caption"
        android:textStyle="bold"
        android:text="Created at:"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/list_users_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/created_at"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_alignParentRight="true"
        android:text="2018-02-20"
        />

</RelativeLayout>