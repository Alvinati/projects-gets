<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/form_card"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:elevation="4dp"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".main.MainActivity">

    <ProgressBar
        android:id="@+id/pb_cre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:layout_centerInParent="true"
        android:backgroundTint="@android:color/white"
        android:indeterminateTint="@color/colorAccent"
        android:indeterminate="true"
        />

        <TextView
            android:id="@+id/alert_pop_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            style="@style/TextAppearance.AppCompat.Medium"
            />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/row_group"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:text="User Group"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:text=" : "
                    android:textColor="@android:color/black"
                    />
                <Spinner
                    android:id="@+id/cre_sp_usergroup"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    />
            </TableRow>

            <TableRow
                android:id="@+id/row_username"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:text="Username"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:text=" : "
                    android:textColor="@android:color/black"
                    />
                <EditText
                    android:id="@+id/cre_et_username"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:hint="John"
                    />
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:text="Nama Lengkap"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:textColor="@android:color/black"
                    android:text=" : "
                    />
                <EditText
                    android:id="@+id/cre_et_nama"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:hint="John Doe"
                    />
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:text="Email"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:text=" : "
                    android:textColor="@android:color/black"
                    />
                <EditText
                    android:id="@+id/cre_et_email"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:inputType="textEmailAddress"
                    android:hint="john_doe@gmail.com"
                    />
            </TableRow>

            <TableRow
                android:id="@+id/row_vendor"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:text="Perusahaan"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:textColor="@android:color/black"
                    android:text=" : "
                    />
                <EditText
                    android:id="@+id/cre_et_vendor"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:hint="PT Prima Abadi"
                    android:dropDownHeight="100dp"
                    />
            </TableRow>


            <TableRow
                android:id="@+id/row_region"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:text="Region"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:textColor="@android:color/black"
                    android:text=" : "
                    />
                <AutoCompleteTextView
                    android:id="@+id/cre_ac_region"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:hint="Jakarta 1"
                    android:dropDownHeight="100dp"
                    />
            </TableRow>

            <TableRow
                android:id="@+id/row_kota"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:text="Kota"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:textColor="@android:color/black"
                    android:text=" : "
                    />
                <EditText
                    android:id="@+id/cre_et_kota"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:hint="Jakarta Selatan, DKI Jakarta"
                    android:textSize="12sp"
                    android:dropDownHeight="100dp"
                    />
            </TableRow>

            <TableRow
                android:id="@+id/row_lkc"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:text="KCI-KCP"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:textColor="@android:color/black"
                    android:text=" : "
                    />
                <EditText
                    android:id="@+id/cre_et_KCI"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_marginRight="5dp"
                    android:hint="KCI MT. Haryono"
                    />
                <EditText
                    android:id="@+id/cre_et_KCP"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:hint="KCP Wisma Mulya"
                    />
            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/keterangan_pass"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Caption"
            android:text="* default password: 123456"
            />

</LinearLayout>
