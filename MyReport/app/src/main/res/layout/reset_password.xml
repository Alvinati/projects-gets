<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="250dp"
    android:background="@android:color/white"
    android:layout_width="300dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/reset_header"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="2"
            android:id="@+id/reset_judul"
            android:layout_width="0dp"
            android:text="Permintaan Reset Password"
            android:textColor="@color/colorAccent"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_height="wrap_content" />
        <ImageButton
            android:contentDescription="close_button"
            android:id="@+id/reset_close"
            android:background="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_cancel_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/reset_header"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/labelEmail"
            android:layout_centerInParent="true"
            android:text="Email "
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/apel_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/reset_email"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/reset_btn_kirim"
        style="@style/customButton"
        android:text="KIRIM"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
      />

</RelativeLayout>